#!/usr/bin/env ruby

require 'thor'
require 'mushy'

class RailsCLI < Thor

  desc "start FILE", "Run this workflow file."
  def start file
    content = File.open(file).read
    puts content
  end

  desc "build FILE", 'Build a flow.'
  def build file

    puts 'ok'

  end

end

RailsCLI.start(ARGV)

exit if ARGV[0] != 'build'

require 'sinatra'
enable :run

get '/' do
   File.read(File.join(File.dirname(__FILE__), 'public', 'index.html'))
end